<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.publicac.mine.PersonMineActivity">

    <include layout="@layout/title_bar_layout"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_marginTop="@dimen/padding_14"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginEnd="@dimen/padding_2"
                    android:layout_width="@dimen/padding_73"
                    android:layout_height="@dimen/padding_73"/>

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_15"
                    android:layout_toEndOf="@+id/img_head"
                    android:layout_marginEnd="@dimen/padding_12">

                    <LinearLayout
                        android:id="@+id/ll_dynamic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="231"
                            android:textColor="@color/color_444444"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="动态"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_fen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_fen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="2w"
                            android:textColor="@color/color_444444"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="粉丝"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_follow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_follow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/color_444444"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_zan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_zan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/color_444444"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="获赞"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_favorite"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_favorite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/color_444444"
                            android:textSize="@dimen/text_size_13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_size_10" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_type"
                    android:layout_toEndOf="@+id/img_head"
                    >
                    <TextView
                        android:id="@+id/tv_modify_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/padding_27"
                        android:text="修改资料"
                        android:gravity="center"
                        android:textColor="@color/color_4F9BFA"
                        android:background="@drawable/bg_stroke_4a9bfa_21"
                        android:layout_marginTop="@dimen/padding_11"
                        android:layout_marginStart="@dimen/padding_10"/>


                    <TextView
                        android:id="@+id/tv_apply"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/padding_27"
                        android:text="申请认证"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_solid_4f9bfa_15"
                        android:layout_marginTop="@dimen/padding_11"
                        android:layout_marginEnd="@dimen/padding_22"
                        android:layout_marginStart="@dimen/padding_8"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_head"
                    android:layout_marginTop="@dimen/padding_12"
                    android:text="简介：英国健身教练，网红，生产干货"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_13"
                    android:paddingBottom="@dimen/padding_13"
                    android:layout_marginStart="@dimen/padding_14"/>

            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dynamic"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginEnd="@dimen/padding_10"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>