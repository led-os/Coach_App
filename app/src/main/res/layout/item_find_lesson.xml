<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/padding_5"
    android:layout_marginBottom="@dimen/padding_5"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tuan"
        android:layout_width="@dimen/padding_15"
        android:layout_height="@dimen/padding_15"
        android:background="@drawable/bg_solid_ff7c84_2"
        android:gravity="center"
        android:text="团"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_tuan"
        android:layout_alignBottom="@+id/tv_tuan"
        android:layout_marginStart="@dimen/padding_4"
        android:layout_marginEnd="@dimen/padding_8"
        android:layout_toEndOf="@+id/tv_tuan"
        android:gravity="center_vertical"
        android:text="¥9.9"
        android:textColor="@color/color_f1404b"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_tuan"
        android:layout_alignBottom="@+id/tv_tuan"
        android:layout_toEndOf="@+id/tv_money"
        android:text="百日瘦身计划减脂训练体验课…"
        android:textSize="@dimen/text_size_12" />
    
    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/padding_10"
        android:layout_height="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_18"
        android:layout_centerVertical="true"
        android:id="@+id/img_right"
        android:src="@drawable/nim_arrow_right"/>

</RelativeLayout>