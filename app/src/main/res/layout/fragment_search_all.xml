<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.publicac.SearchAllFragment">

    <RelativeLayout
        android:id="@+id/rel_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_tao_lean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tao_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="淘学"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tao_learn"
                    android:layout_below="@+id/tv_tao_learn"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="赛事"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_match"
                    android:layout_below="@+id/tv_match"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="视频"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_video"
                    android:layout_below="@+id/tv_video"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="文章"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_information"
                    android:layout_below="@+id/tv_information"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="产品"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_product"
                    android:layout_below="@+id/tv_product"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="用户"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_user"
                    android:layout_below="@+id/tv_user"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>



</ScrollView>