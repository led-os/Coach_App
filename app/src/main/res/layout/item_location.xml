<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_84"
    android:background="@color/white"
    android:layout_marginTop="@dimen/padding_0.5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/padding_10"
        android:visibility="gone"
        android:src="@drawable/cbx_shopping_cart"/>
    <TextView
        android:id="@+id/tv_name"
        android:text="张三"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_222222"
        android:layout_toEndOf="@+id/img_select"/>

    <TextView
        android:id="@+id/tv_phone"
        android:text="13612458795"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_222222"
        android:layout_toEndOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="@dimen/padding_46"
        android:layout_height="@dimen/padding_24"
        android:text="默认"
        android:visibility="gone"
        android:layout_toEndOf="@+id/tv_phone"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginStart="@dimen/padding_10"
        android:gravity="center"
        android:background="@drawable/bg_stroke_f1404b_solid_fff8f8_14"
        android:textColor="@color/color_f1404b"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_666666"
        android:text="浙江省 杭州市 余杭区 保利椰风半岛1栋1单元1-03-02"
        android:layout_toStartOf="@+id/img_edit"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_alignStart="@+id/tv_name"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_edit"/>

</RelativeLayout>