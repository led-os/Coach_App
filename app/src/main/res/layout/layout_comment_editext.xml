<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/et_comment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/padding_35"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"

        android:background="@drawable/bg_solid_f5f5f5_4"
        android:gravity="start|center_vertical"
        android:hint="回复fka:"
        android:textCursorDrawable="@null"
        android:imeOptions="actionSend"
        android:paddingStart="@dimen/padding_10"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_35"
        android:text="发布"
        android:gravity="center"
        android:paddingStart="@dimen/padding_14"
        android:paddingEnd="@dimen/padding_14"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color_333333"/>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingStart="@dimen/padding_14"
        android:paddingTop="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_14"
        android:paddingBottom="@dimen/padding_8">

        <ImageView
            android:id="@+id/img_send"
            android:layout_marginTop="@dimen/padding_1"
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:src="@drawable/cbx_unselected"/>

        <TextView
            android:text="评论并转发"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_13"
            android:paddingStart="@dimen/padding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>