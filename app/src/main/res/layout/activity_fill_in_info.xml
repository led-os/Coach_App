<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.publicac.mine.FillInInfoActivity">


    <include layout="@layout/title_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:text="真实姓名"
                    />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:gravity="right|center"
                    android:maxLength="20"
                    android:hint="请输入真实姓名"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginStart="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:text="手机号码"
                    />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:inputType="number"
                    android:gravity="right|center"
                    android:maxLength="20"
                    android:hint="请输入手机号"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginStart="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:text="证件类型"
                    />

                <TextView
                    android:id="@+id/ed_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:inputType="number"
                    android:gravity="right|center"
                    android:text="身份证"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginStart="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:text="证件号码"
                    />

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:inputType="number"
                    android:gravity="right|center"
                    android:maxLength="20"
                    android:hint="请输入证件号"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginStart="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:text="认证方向"
                    />

                <TextView
                    android:id="@+id/ed_select_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_dddddd"
                    android:textSize="@dimen/text_size_15"
                    android:layout_marginEnd="@dimen/padding_8"
                    android:gravity="right|center"
                    android:layout_toStartOf="@+id/img_select"
                    android:text="请选择"
                    android:background="@null"
                    />

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_more"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginStart="@dimen/padding_14"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证材料"
                    android:textSize="@dimen/text_size_15"
                    android:layout_marginTop="@dimen/padding_27"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginBottom="@dimen/padding_17"
                    android:textColor="@color/color_333333"/>

                <RelativeLayout
                    android:id="@+id/rel_zyrz"
                    android:layout_below="@+id/tv_condition"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_width="@dimen/padding_154"
                    android:layout_height="@dimen/padding_115"
                    android:background="@drawable/bg_solid_88b0e3_4">

                    <ImageView
                        android:id="@+id/img_zyrz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_pszp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_condition_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/rel_zyrz"
                    android:layout_alignEnd="@+id/rel_zyrz"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_8"
                    android:layout_below="@+id/rel_zyrz"
                    android:text="职业认证材料"/>



                <RelativeLayout
                    android:id="@+id/rel_scrx"
                    android:layout_below="@+id/tv_condition_des"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_width="@dimen/padding_154"
                    android:layout_height="@dimen/padding_115"
                    android:background="@drawable/bg_solid_88b0e3_4">

                    <ImageView
                        android:id="@+id/img_scrx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_pszp"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/rel_scrx"
                    android:layout_alignEnd="@+id/rel_scrx"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_8"
                    android:layout_below="@+id/rel_scrx"
                    android:text="身份证手持人像面"/>


                <RelativeLayout
                    android:id="@+id/rel_scgh"
                    android:layout_below="@+id/tv_condition_des"
                    android:layout_toEndOf="@+id/rel_scrx"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_width="@dimen/padding_154"
                    android:layout_height="@dimen/padding_115"
                    android:background="@drawable/bg_solid_88b0e3_4">

                    <ImageView
                        android:id="@+id/img_scgh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_scgh"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/rel_scgh"
                    android:layout_alignEnd="@+id/rel_scgh"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_666666"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_8"
                    android:layout_below="@+id/rel_scgh"
                    android:text="身份证手持国徽面"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_42"
                android:background="@drawable/bg_solid_4f9bfa_21"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_40"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/padding_19"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:text="提交申请"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>