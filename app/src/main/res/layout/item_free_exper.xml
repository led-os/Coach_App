<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/padding_5"
    android:layout_marginEnd="@dimen/padding_5"
    android:layout_height="@dimen/padding_180"
    android:background="@drawable/bg_solid_ffffff_6"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_url"
        android:layout_width="@dimen/padding_140"
        android:layout_height="@dimen/padding_104"
        android:src="@drawable/ic_default_image"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="-4dp">

        <TextView
            android:layout_marginTop="@dimen/padding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:textColor="@color/color_333333"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="【基础课】瑜伽入门课程一"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_5"
            android:textSize="@dimen/text_size_14"/>


        <TextView
            android:id="@+id/tv_number"
            android:paddingStart="@dimen/padding_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.1k次播放"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color_666666"
            android:layout_marginBottom="@dimen/padding_7"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:layout_alignTop="@+id/tv_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding_10"
            android:textColor="@color/color_F1404B"
            android:text="¥ 8.8"/>

    </RelativeLayout>


</LinearLayout>