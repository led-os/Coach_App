<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical">

    <include layout="@layout/title_bar_layout"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_65"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="头像"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/padding_38"
                    android:layout_height="@dimen/padding_38"
                    android:layout_marginEnd="@dimen/padding_6"
                    android:src="@drawable/ic_role_trainer1"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="姓名"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />
                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_english_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="英文名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_english"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="judy"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:visibility="visible"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="性别"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="男/女"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_bind_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="微信号"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/edWechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|right"
                    android:text="kine"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="生日"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="1995/08/20"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />
                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="学历"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />


                <TextView
                    android:id="@+id/tvEducation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|right"
                    android:text="本科"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="参加工作时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15" />


                <TextView
                    android:id="@+id/tvJobTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|right"
                    android:text=""
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_15" />

                <ImageView
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_19"
                    android:layout_height="@dimen/padding_19"
                    android:src="@drawable/ic_more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0_33"
                android:layout_marginLeft="@dimen/padding_14"
                android:background="#FFEEEEEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginEnd="@dimen/padding_14"
                android:layout_height="@dimen/padding_154">

                <TextView
                    android:id="@+id/tv_simple"
                    android:text="简介"
                    android:paddingTop="@dimen/padding_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"/>


                <EditText
                    android:id="@+id/et_simple"
                    android:hint="请输入"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_below="@+id/tv_simple"
                    android:background="@null"
                    android:maxLength="140"
                    android:gravity="start"
                    android:paddingTop="@dimen/padding_8"
                    android:paddingBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_333333"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/padding_12"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/color_999999"
                    android:text="0/140"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>