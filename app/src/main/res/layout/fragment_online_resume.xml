<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.trainer.personal.OnlineResumeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/btn_job_intention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_17"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginBottom="@dimen/padding_13"
            android:text="求职意向"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_17" />

        <com.jsjlzj.wayne.widgets.MyListView
            android:id="@+id/rv_job_intention"
            android:divider="@null"
            android:background="@color/white"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginEnd="@dimen/padding_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <!-- 工作经验 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_14"
            android:layout_marginStart="@dimen/text_size_14"
            android:drawablePadding="10dp"
            android:text="工作经验"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_17" />

        <com.jsjlzj.wayne.widgets.MyListView
            android:id="@+id/rv_exp"
            android:divider="@null"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginEnd="@dimen/padding_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <!-- 教育经历 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_14"
            android:layout_marginTop="@dimen/padding_20"
            android:gravity="center|left"
            android:text="教育经历"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_17" />


        <com.jsjlzj.wayne.widgets.MyListView
            android:id="@+id/rv_education"
            android:divider="@null"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginEnd="@dimen/padding_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <TextView
            android:text="认证证书"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_authentication_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_17"
            android:layout_marginEnd="@dimen/padding_10" />

    </LinearLayout>

</ScrollView>