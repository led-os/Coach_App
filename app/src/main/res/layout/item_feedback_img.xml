<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/padding_96"
    android:layout_height="@dimen/padding_96"
    android:layout_marginStart="@dimen/padding_4"
    android:layout_marginEnd="@dimen/padding_4">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_upload" />

    <ImageView
        android:id="@+id/img_play"
        android:src="@drawable/ic_play"
        android:visibility="gone"
        android:layout_width="@dimen/padding_23"
        android:layout_height="@dimen/padding_23"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_delete_select_img"
        android:visibility="gone" />

</RelativeLayout>