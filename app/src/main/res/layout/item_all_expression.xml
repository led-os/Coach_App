<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_46"
    android:layout_marginStart="@dimen/padding_7"
    android:layout_marginEnd="@dimen/padding_7"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_10"
    android:background="@drawable/bg_stroke_dddddd_23"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_5"
        android:visibility="visible"
        android:src="@drawable/face_01"/>

    <TextView
        android:id="@+id/tv_des"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/text_size_15"
        android:text="不忘初心"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>