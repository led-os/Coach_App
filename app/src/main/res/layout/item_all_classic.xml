<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_115"
    android:layout_marginStart="@dimen/padding_4"
    android:layout_marginEnd="@dimen/padding_4"
    android:layout_marginTop="@dimen/padding_4"
    android:layout_marginBottom="@dimen/padding_4"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_home_right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_solid_94000000_video"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/padding_31"
        android:layout_height="wrap_content"
        android:text="增肌减脂"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_15"/>

</RelativeLayout>