<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.store.home.recommend.AllClassicActivity">


    <include layout="@layout/title_bar_layout"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_42"
        android:layout_marginTop="@dimen/padding_24"
        android:layout_marginEnd="@dimen/padding_10"
        android:drawableRight="@drawable/ic_location_down"
        android:drawablePadding="@dimen/padding_4"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_14"
        android:text="河北"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_size_13" />
    <RelativeLayout
        android:id="@+id/rel_empty"
        android:layout_marginTop="@dimen/padding_66"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jsjlzj.wayne.widgets.CustomXRecyclerView
            android:id="@+id/rv_hot_school"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginEnd="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>