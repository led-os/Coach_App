<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_56"
    android:layout_marginStart="@dimen/padding_14"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/padding_38"
        android:layout_height="@dimen/padding_38"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_avatars" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_head"
        android:ellipsize="end"
        android:layout_alignTop="@+id/img_head"
        android:layout_marginTop="@dimen/padding_2"
        android:maxWidth="@dimen/padding_220"
        android:singleLine="true"
        android:text="夜空中最亮的星星"
        android:textColor="@color/color_da2b2b"
        android:textSize="@dimen/text_size_13" />


    <TextView
        android:id="@+id/tv_fen"
        android:text="粉丝·232万"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/padding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_favorite"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_23"
        android:layout_marginStart="@dimen/padding_2"
        android:layout_marginEnd="@dimen/padding_14"
        android:background="@drawable/bg_stroke_4a9bfa_12"
        android:text="关注"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_4F9BFA"
        android:textSize="@dimen/text_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/padding_0_33"
        android:background="@color/color_eeeeee"/>
</RelativeLayout>