<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_50"
    android:layout_marginTop="@dimen/padding_7"
    android:layout_marginBottom="@dimen/padding_7"
    android:background="@drawable/bg_stroke_dddddd_5"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/padding_38"
        android:layout_height="@dimen/padding_38"
        android:layout_marginStart="@dimen/padding_6"
        android:textSize="@dimen/text_size_19"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="健"
        android:background="@drawable/bg_solid_5e9f95_5"/>

    <TextView
        android:id="@+id/tv_name"
        android:text="一、健身教练概述"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13"
        android:layout_marginStart="@dimen/padding_14"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/padding_6"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>