<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.publicac.mine.TrainerAuthenActivity">

    <include layout="@layout/title_bar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_condition"
                android:layout_alignBottom="@+id/tv_condition"
                android:layout_marginEnd="@dimen/padding_10"
                android:layout_toStartOf="@+id/tv_condition"
                android:src="@drawable/ic_des" />

            <TextView
                android:id="@+id/tv_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/padding_36"
                android:text="申请条件"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_condition"
                android:layout_alignBottom="@+id/tv_condition"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_toEndOf="@+id/tv_condition"
                android:src="@drawable/ic_des" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_condition"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_10"
                android:paddingTop="@dimen/padding_8"
                android:paddingBottom="@dimen/padding_8"
                android:background="@drawable/bg_shape_condition"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绑定手机"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_size_15" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_is_bind"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_15"
                        android:text="已完成"
                        android:textColor="@color/color_4F9BFA"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0_33"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:background="@color/color_dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝数≥1000人"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_size_15" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_fens_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_15"
                        android:text="未满足"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0_33"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:background="@color/color_dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近发布动态≥15条"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_size_15" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_public_15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_15"
                        android:text="去发布"
                        android:textColor="@color/color_4F9BFA"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0_33"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:background="@color/color_dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近30天动态阅读量≥10000次"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_size_15" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_dynamic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_15"
                        android:text="未满足"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_0_33"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:background="@color/color_dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginStart="@dimen/padding_19"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginEnd="@dimen/padding_19"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:gravity="center_vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近30天动态点赞数≥1000次"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/text_size_15" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_15"
                        android:text="去发布"
                        android:textColor="@color/color_4F9BFA"
                        android:textSize="@dimen/text_size_15" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_42"
            android:layout_marginStart="@dimen/padding_19"
            android:layout_marginTop="@dimen/padding_50"
            android:layout_marginEnd="@dimen/padding_19"
            android:layout_marginBottom="@dimen/padding_50"
            android:background="@drawable/bg_solid_dddddd_21"
            android:gravity="center"
            android:text="申请教练认证"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>