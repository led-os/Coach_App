<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical">

   <include layout="@layout/title_bar_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_e2e2e2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_96">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌logo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_19"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_333333"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        
        <ImageView
            android:layout_width="@dimen/padding_58"
            android:layout_height="@dimen/padding_58"
            android:id="@+id/img_logo"
            android:layout_marginEnd="@dimen/padding_20"
            android:src="@drawable/icon_store_photo"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_marginEnd="@dimen/padding_19"
        android:background="@color/color_e2e2e2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_96"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>