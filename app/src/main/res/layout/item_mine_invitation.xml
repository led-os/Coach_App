<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_56"
    android:layout_marginStart="@dimen/padding_14"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/padding_35"
        android:layout_height="@dimen/padding_35"
        android:layout_marginEnd="@dimen/padding_13"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_avatars" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_head"
        android:ellipsize="end"
        android:layout_alignTop="@+id/img_head"
        android:maxWidth="@dimen/padding_220"
        android:singleLine="true"
        android:text="王者"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_name"
        android:ellipsize="end"
        android:layout_alignTop="@+id/img_head"
        android:layout_marginStart="@dimen/padding_6"
        android:maxWidth="@dimen/padding_220"
        android:singleLine="true"
        android:text="150****0154"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13" />


    <TextView
        android:id="@+id/tv_time"
        android:text="2019年07月15日"
        android:layout_below="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/padding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_favorite"
        android:layout_width="@dimen/padding_50"
        android:layout_height="@dimen/padding_23"
        android:layout_marginStart="@dimen/padding_2"
        android:layout_marginEnd="@dimen/padding_12"
        android:background="@drawable/bg_invitation_c67879"
        android:text="教练"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/padding_0_33"
        android:background="@color/color_eeeeee"/>
</RelativeLayout>