<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_url"
        android:src="@drawable/ic_default_image"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_width="@dimen/padding_100"
        android:layout_height="@dimen/padding_120"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_toEndOf="@+id/img_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4"
        android:paddingEnd="@dimen/padding_15"
        android:text="男士增肌进阶训练"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_666666"
        android:paddingEnd="@dimen/padding_15"
        android:text="强度升级，给肌肉更强的刺激，全身增肌，穿衣有型，更显魅力"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_alignStart="@+id/tv_title"/>

    <TextView
        android:id="@+id/tv_play_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="653万次播放"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_666666"
        android:layout_alignStart="@id/tv_title"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_alignBottom="@+id/img_url"/>
</RelativeLayout>