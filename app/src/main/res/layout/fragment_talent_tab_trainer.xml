<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:paddingTop="@dimen/dp_24"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/btnAdd"
            android:src="@drawable/ic_add"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="17dp"
            android:layout_height="17dp" />
        <ImageView
            android:id="@+id/btnSearch"
            android:src="@drawable/ic_search"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="17dp"
            android:layout_height="17dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/btnRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="9dp"
            android:paddingTop="6dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:text="推荐"
            android:textColor="@color/dc_text_gb_selector"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="9dp"
            android:paddingTop="6dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:text="最新"
            android:textColor="@color/dc_text_gb_selector"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#FFF2F4F7"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_dropdown"
            android:paddingLeft="9dp"
            android:paddingTop="6dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:text="城市"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:drawablePadding="5dp"
            android:id="@+id/btnScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#FFF2F4F7"
            android:drawableRight="@drawable/ic_dropdown"
            android:paddingLeft="9dp"
            android:paddingTop="6dp"
            android:paddingRight="9dp"
            android:paddingBottom="6dp"
            android:text="筛选"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <com.jsjlzj.wayne.widgets.MyRecyclerView
        android:id="@+id/rvTabTanlent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>