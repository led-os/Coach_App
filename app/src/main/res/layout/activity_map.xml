<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_24">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_14"
            android:text="@string/cancel"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="所在位置"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jsjlzj.wayne.widgets.SearchBarView
            android:id="@+id/search_bar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_31"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_14"
            android:layout_marginBottom="@dimen/padding_8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_no_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_14"
            android:text="不显示位置"
            android:textColor="@color/color_4F9BFA"
            android:textSize="@dimen/text_size_15"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_0.5"
            android:layout_marginStart="@dimen/padding_14"
            android:background="@color/color_eeeeee"/>
        <TextView
            android:id="@+id/tv_curr_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_14"
            android:text="北京"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_0.5"
            android:layout_marginStart="@dimen/padding_14"
            android:background="@color/color_eeeeee"/>

        <com.jsjlzj.wayne.widgets.CustomXRecyclerView
            android:id="@+id/rv_poi_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>