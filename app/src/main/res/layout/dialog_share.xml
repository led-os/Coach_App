<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_163"
    android:background="@drawable/bg_share_slide"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btn0"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_23"
        android:layout_marginStart="@dimen/padding_19"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_pyq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/padding_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn1"
        android:layout_toEndOf="@+id/btn0"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_23"
        android:layout_marginStart="@dimen/padding_29"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/padding_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="朋友"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding_23"
        android:layout_marginStart="@dimen/padding_29"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/padding_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:gravity="center"
        android:text="@string/cancel"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_232323"
        android:textSize="@dimen/text_size_15"/>
</RelativeLayout>