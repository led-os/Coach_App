<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.store.home.mine.ApplyLeaderActivity">

    <include layout="@layout/title_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="真实姓名"
            android:layout_marginStart="@dimen/padding_14"
            android:textColor="@color/color_333333"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_name"
            android:hint="请输入真实姓名"
            android:paddingEnd="@dimen/padding_24"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_dddddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="身份证号"
            android:layout_marginStart="@dimen/padding_14"
            android:textColor="@color/color_333333"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_code"
            android:hint="请输入真实身份证号"
            android:paddingEnd="@dimen/padding_24"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_dddddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/padding_50">

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="所在地区"
            android:layout_marginStart="@dimen/padding_14"
            android:textColor="@color/color_333333"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_select_area"
            android:hint="请选择"
            android:paddingEnd="@dimen/padding_11"
            android:layout_marginStart="@dimen/padding_16"
            android:textColor="@color/color_dddddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_select_area"
            android:layout_marginEnd="@dimen/padding_14"
            android:src="@drawable/icon_home_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="常用手机号"
            android:layout_marginStart="@dimen/padding_14"
            android:textColor="@color/color_333333"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_phone"
            android:hint="请输入手机号"
            android:paddingEnd="@dimen/padding_24"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_dddddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50">

        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:text="常用微信"
            android:layout_marginStart="@dimen/padding_14"
            android:textColor="@color/color_333333"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_wx"
            android:hint="请输入真实微信号"
            android:paddingEnd="@dimen/padding_24"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_dddddd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_42"
        android:layout_marginBottom="@dimen/padding_61"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_marginEnd="@dimen/padding_19"
        android:text="提交申请"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:textColor="#6c4304"
        android:background="@drawable/bg_solid_f7d16c_21"/>
</LinearLayout>