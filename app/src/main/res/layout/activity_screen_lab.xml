<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/defult_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/base_toolbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:text="经验要求"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <com.jsjlzj.wayne.widgets.MyRecyclerView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="18dp"
                android:id="@+id/rvSreen1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:text="学历要求"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <com.jsjlzj.wayne.widgets.MyRecyclerView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="18dp"
                android:id="@+id/rvSreen2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:text="薪资待遇"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <com.jsjlzj.wayne.widgets.MyRecyclerView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="18dp"
                android:id="@+id/rvSreen3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:text="求职状态"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <com.jsjlzj.wayne.widgets.MyRecyclerView
                android:layout_marginRight="3dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rvSreen4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnConfirm"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="确定"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="38dp"
        android:layout_marginLeft="38dp"
        android:background="@drawable/dr_btn_login_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>