<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_url"
        android:layout_width="@dimen/padding_120"
        android:layout_height="@dimen/padding_85"
        android:layout_marginStart="@dimen/padding_10"
        android:src="@drawable/ic_default_image" />

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="@dimen/padding_28"
        android:layout_height="@dimen/padding_28"
        android:layout_alignStart="@+id/img_url"
        android:layout_marginStart="@dimen/padding_46"
        android:layout_marginTop="@dimen/padding_28"
        android:src="@drawable/ic_play" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_4"
        android:layout_toEndOf="@+id/img_url"
        android:paddingEnd="@dimen/padding_10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="课程解读"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_marginStart="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_4"
        android:paddingEnd="@dimen/padding_10"
        android:layout_toEndOf="@+id/img_url"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="增肌进阶训练"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_url"
        android:layout_marginBottom="@dimen/padding_6"
        android:text="2019-10-19 12:29"
        android:layout_alignStart="@id/tv_type"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>