<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bar_shape"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_btn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/padding_6"
        android:layout_marginEnd="@dimen/padding_6"
        android:src="@drawable/ic_search_home" />

    <EditText
        android:id="@+id/search_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_btn"
        android:background="@null"
        android:layout_weight="1"
        android:textCursorDrawable="@drawable/cursor_text_focus"        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="搜索感兴趣的内容"
        android:imeOptions="actionSearch"
        android:paddingRight="@dimen/padding_2"
        android:singleLine="true"
        android:textColor="@color/color_444444"
        android:textColorHint="@color/color_cccccc"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/search_clear_word_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/padding_5"
        android:padding="@dimen/padding_7"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close_r"
        android:visibility="visible" />

</LinearLayout>