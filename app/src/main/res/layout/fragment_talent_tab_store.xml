<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_213"
            android:background="@drawable/bg_mark"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/padding_20"
                android:paddingStart="@dimen/padding_14"
                android:paddingEnd="@dimen/padding_14"
                android:src="@drawable/ic_massage_write" />

            <ImageView
                android:id="@+id/img_user_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/padding_31"
                android:paddingStart="@dimen/padding_14"
                android:paddingEnd="@dimen/padding_14"
                android:src="@drawable/ic_more_write"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="@dimen/padding_46"
                android:layout_height="@dimen/padding_46"
                android:layout_below="@+id/img_message"
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginTop="@dimen/padding_19"
                android:src="@drawable/ic_role_trainer1" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_head"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/padding_12"
                android:layout_marginTop="@dimen/padding_4"
                android:layout_toEndOf="@+id/image_head"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="名字"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name"
                android:layout_marginTop="@dimen/padding_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="自律给我自由"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/image_head"
                android:layout_marginLeft="@dimen/padding_14"
                android:layout_marginRight="@dimen/padding_14"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_communicate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_communicate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="231"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="沟通过"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_interview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_interview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2w"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待面试"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="收藏"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_zwgl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zwgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="职位管理"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_recommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_96"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_marginTop="@dimen/padding_14"
            android:layout_marginEnd="@dimen/padding_14"
            android:layout_marginBottom="@dimen/padding_14"
            android:src="@drawable/bg_mark"/>


        <LinearLayout
            android:id="@+id/ll_store"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_jlbxx"/>

            <TextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="俱乐部信息"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />


        <LinearLayout
            android:id="@+id/ll_sign_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_wdbm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="我的报名"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_follow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_lljl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="我的关注"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_sz"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="设置"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_yqhy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_yqhy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="邀请好友"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_gywm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_gywm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="关于我们"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_bzyfk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_15"
                android:src="@drawable/ic_me_bzyfk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="帮助与反馈"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_15"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_19"
                android:layout_marginEnd="@dimen/padding_19"
                android:src="@drawable/ic_me_more"/>
        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/padding_19"
            android:layout_marginRight="@dimen/padding_19"
            android:background="#FFEEEEEE" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/dr_btn_login_y"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

</ScrollView>