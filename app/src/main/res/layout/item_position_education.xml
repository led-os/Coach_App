<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItem"
    android:paddingTop="@dimen/padding_23"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvEducationSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学校名字"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEducationMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_6"
        android:text="专业"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEducationSchoolName" />

    <TextView
        android:id="@+id/tvEducationTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2018-2019"
        android:layout_marginTop="@dimen/padding_6"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEducationMajor" />
</androidx.constraintlayout.widget.ConstraintLayout>