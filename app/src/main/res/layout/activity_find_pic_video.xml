<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.store.find.FindPicVideoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_42"
        android:layout_marginTop="@dimen/padding_24">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/padding_14"
            android:paddingEnd="@dimen/padding_14"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_title_back"
            android:visibility="visible" />
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_16"
                android:text="图片"/>
            <ImageView
                android:id="@+id/img_pic"
                android:layout_below="@+id/tv_pic"
                android:layout_alignStart="@+id/tv_pic"
                android:layout_alignEnd="@+id/tv_pic"
                android:layout_width="@dimen/padding_19"
                android:layout_height="@dimen/padding_2"
                android:layout_marginTop="@dimen/padding_3"
                android:layout_marginStart="@dimen/padding_7"
                android:layout_marginEnd="@dimen/padding_7"
                android:background="@color/color_f1404b"/>


            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_pic"
                android:layout_marginStart="@dimen/padding_18"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/text_size_16"
                android:text="视频"/>
            <ImageView
                android:id="@+id/img_video"
                android:layout_below="@+id/tv_video"
                android:layout_alignStart="@+id/tv_video"
                android:layout_alignEnd="@+id/tv_video"
                android:layout_width="@dimen/padding_19"
                android:layout_height="@dimen/padding_2"
                android:visibility="gone"
                android:layout_marginTop="@dimen/padding_3"
                android:layout_marginStart="@dimen/padding_7"
                android:layout_marginEnd="@dimen/padding_7"
                android:background="@color/color_f1404b"/>
        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>