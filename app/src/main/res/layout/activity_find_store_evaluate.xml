<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.store.find.FindStoreEvaluateActivity">

    <include layout="@layout/title_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MYFIT健身工作室（诺德店）"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_12"
                    android:textColor="@color/color_222222"/>

                <LinearLayout
                    android:id="@+id/ll_set"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_16"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设施"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_environment"
                    android:layout_below="@+id/ll_set"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_12"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="环境"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5_environment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_server"
                    android:layout_below="@+id/ll_environment"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_12"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_fen_des"
                    android:layout_alignTop="@+id/ll_set"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/padding_29"
                    android:textColor="@color/color_f1404b"
                    android:textSize="@dimen/text_size_13"
                    android:text="综合评分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_fen"
                    android:layout_alignEnd="@+id/tv_fen_des"
                    android:layout_below="@+id/tv_fen_des"
                    android:layout_width="@dimen/padding_42"
                    android:layout_height="@dimen/padding_42"
                    android:text="4.0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_f1404b"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_6"
                    android:background="@drawable/bg_stroke_f1404b_21"/>


                <EditText
                    android:id="@+id/et_content"
                    android:background="@null"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/color_333333"
                    android:hint="请输入文字"
                    android:textColorHint="@color/color_dddddd"
                    android:layout_marginTop="@dimen/padding_17"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_below="@+id/ll_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/rel_pic"
                    android:layout_marginTop="@dimen/padding_40"
                    android:layout_below="@+id/et_content"
                    android:layout_width="@dimen/padding_77"
                    android:layout_height="@dimen/padding_77"
                    android:layout_marginStart="@dimen/padding_14"
                    android:background="@drawable/bg_solid_f9f9f9_5">


                    <ImageView
                        android:id="@+id/img_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_19"
                        android:src="@drawable/icon_update_pic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/color_666666"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_6"
                        android:layout_below="@+id/img_pic"
                        android:text="上传照片"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_video"
                    android:layout_alignTop="@+id/rel_pic"
                    android:layout_toEndOf="@+id/rel_pic"
                    android:layout_below="@+id/et_content"
                    android:layout_width="@dimen/padding_77"
                    android:layout_height="@dimen/padding_77"
                    android:layout_marginStart="@dimen/padding_10"
                    android:background="@drawable/bg_solid_f9f9f9_5">


                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_19"
                        android:src="@drawable/icon_update_video"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/color_666666"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_6"
                        android:layout_below="@+id/img_video"
                        android:text="上传视频"/>


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/padding_29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_trainer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_23"
                    android:gravity="center_vertical"
                    android:text="教练"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/color_232323"
                    android:layout_marginStart="@dimen/padding_13"
                    />

                <TextView
                    android:id="@+id/tv_select_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_select_pic"
                    android:layout_alignBottom="@+id/img_select_pic"
                    android:textColor="@color/color_999999"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_13"
                    android:text="6位教练可选"
                    android:layout_toStartOf="@+id/img_select_pic"/>

                <ImageView
                    android:id="@+id/img_select_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/padding_6"
                    android:layout_width="@dimen/padding_23"
                    android:layout_height="@dimen/padding_23"
                    android:src="@drawable/icon_shop_right"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_trainer"
                    android:layout_marginTop="@dimen/padding_19"
                    android:layout_below="@+id/tv_trainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/ll_zy"
                    android:layout_below="@+id/rv_trainer"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_30"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_attitude"
                    android:layout_below="@+id/ll_zy"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_12"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="态度"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5_attitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vivid"
                    android:layout_below="@+id/ll_attitude"
                    android:layout_marginStart="@dimen/padding_14"
                    android:layout_marginTop="@dimen/padding_12"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="形象"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_13"/>

                    <ImageView
                        android:id="@+id/img_1_vivid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_8"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_2_vivid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>

                    <ImageView
                        android:id="@+id/img_3_vivid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_4_vivid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                    <ImageView
                        android:id="@+id/img_5_vivid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_2"
                        android:src="@drawable/icon_evaluate_xing_no"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_fen_store_des"
                    android:layout_alignTop="@+id/ll_zy"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/padding_29"
                    android:textColor="@color/color_f1404b"
                    android:textSize="@dimen/text_size_13"
                    android:text="综合评分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_fen_store"
                    android:layout_alignEnd="@+id/tv_fen_store_des"
                    android:layout_below="@+id/tv_fen_store_des"
                    android:layout_width="@dimen/padding_42"
                    android:layout_height="@dimen/padding_42"
                    android:text="4.0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_f1404b"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginEnd="@dimen/padding_6"
                    android:background="@drawable/bg_stroke_f1404b_21"/>

                <ImageView
                    android:layout_width="@dimen/padding_15"
                    android:layout_height="@dimen/padding_15"
                    android:layout_below="@+id/ll_vivid"
                    android:src="@drawable/icon_find_store_no_select"
                    android:layout_marginTop="@dimen/padding_30"
                    android:layout_marginStart="@dimen/padding_14"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>