<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_77"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_state"
        android:text="签到"
        android:textColor="@color/color_232323"
        android:textSize="@dimen/text_size_13"
        android:layout_marginTop="@dimen/padding_17"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018/11/25  13:40:55"
        android:layout_below="@+id/tv_state"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_marginTop="@dimen/padding_8"
        android:textColor="@color/color_999999"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_state"
        android:text="+1"
        android:layout_marginEnd="@dimen/padding_19"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/color_232323"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_eeeeee"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_marginEnd="@dimen/padding_19"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>