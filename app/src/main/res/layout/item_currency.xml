<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:layout_height="@dimen/padding_77"
    android:layout_marginStart="@dimen/padding_7"
    android:layout_marginEnd="@dimen/padding_7"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_10"
    android:background="@drawable/bg_stroke_dddddd_4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_17"
        android:text="68币"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/color_f1404b"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_6"
        android:text="¥68"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_666666"/>

</LinearLayout>