<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_173"
    android:layout_marginTop="@dimen/padding_9"
    android:layout_marginBottom="@dimen/padding_9"
    android:layout_marginStart="@dimen/padding_4"
    android:layout_marginEnd="@dimen/padding_4">

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_173"
        android:scaleType="fitXY"
        android:src="@drawable/ic_buffer1"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="格斗课培训"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginTop="@dimen/padding_12"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/white"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hot2"
        android:layout_marginEnd="@dimen/padding_13"
        android:layout_marginTop="@dimen/padding_14"
        android:layout_alignEnd="@+id/img_one"/>

    <TextView
        android:id="@+id/tv_add_num"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_17"
        android:text="已有3482报名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_7"
        android:paddingEnd="@dimen/padding_7"
        android:paddingTop="@dimen/padding_3"
        android:layout_alignBottom="@+id/img_one"
        android:layout_alignEnd="@+id/img_one"
        android:paddingBottom="@dimen/padding_3"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/padding_11"
        android:layout_marginBottom="@dimen/padding_12"
        android:layout_gravity="center"
        android:background="@drawable/bg_solid_7d000000_12">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:text="已有"/>
        <TextView
            android:id="@+id/tv_add_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D83535"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:text="12354"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:text="报名"/>

    </LinearLayout>



</RelativeLayout>