<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_fafafa"
    tools:context=".ui.store.shopping.TimeSecondActivity">

    <include layout="@layout/title_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/padding_38"
        android:layout_marginBottom="@dimen/padding_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_robing"
                android:text="正在疯抢"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_f1404b"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/padding_36"/>


            <View
                android:id="@+id/view_robing"
                android:layout_width="@dimen/padding_15"
                android:layout_height="2dp"
                android:background="@color/color_f1404b"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_will_start"
                android:text="即将开始"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_777777"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/padding_36"/>


            <View
                android:id="@+id/view_will_start"
                android:layout_width="@dimen/padding_15"
                android:layout_height="2dp"
                android:visibility="gone"
                android:background="@color/color_f1404b"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>
</LinearLayout>