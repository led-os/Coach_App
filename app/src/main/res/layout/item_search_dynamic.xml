<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_4"
    android:layout_marginEnd="@dimen/padding_4"
    android:layout_marginTop="@dimen/padding_7"
    android:layout_marginBottom="@dimen/padding_7"
    android:id="@+id/rel_item"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_dynamic"
        android:layout_width="@dimen/padding_161"
        android:layout_height="@dimen/padding_161"
        android:src="@drawable/ic_buffer1"/>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_dynamic"
        android:layout_marginEnd="@dimen/padding_8"
        android:layout_marginTop="@dimen/padding_8"
        android:visibility="gone"
        android:src="@drawable/delete"/>

    <ImageView
        android:id="@+id/img_face"
        android:layout_alignEnd="@+id/img_dynamic"
        android:layout_alignTop="@+id/img_dynamic"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_marginEnd="@dimen/padding_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/face_01"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_alignStart="@+id/img_dynamic"
        android:layout_alignEnd="@+id/img_dynamic"
        android:layout_below="@+id/img_dynamic"
        android:layout_marginTop="@dimen/padding_8"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="新手健身入门，一周减脂计"
        android:textSize="@dimen/text_size_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="@dimen/padding_161"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_alignStart="@+id/img_dynamic"
        android:layout_alignEnd="@+id/img_dynamic"
        >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/padding_23"
            android:layout_height="@dimen/padding_23"
            android:src="@drawable/head_icon"/>


        <TextView
            android:id="@+id/tv_name"
            android:text="夜空中最亮的星星"
            android:maxWidth="@dimen/padding_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_4"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color_666666"/>


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uncollected"/>

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_2"
            android:layout_marginEnd="@dimen/padding_2"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color_666666"
            android:text="1412"/>

    </LinearLayout>

</RelativeLayout>