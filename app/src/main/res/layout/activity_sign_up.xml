<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.store.home.amoy.SignUpActivity">

    <include layout="@layout/title_bar_layout"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_20"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginEnd="@dimen/padding_14"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_46">


        <TextView
            android:text="姓名"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_17"
            android:textSize="@dimen/text_size_15"
            android:hint="请输入您的姓名"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/color_dddddd"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginEnd="@dimen/padding_14"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_46">


        <TextView
            android:text="电话"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_17"
            android:hint="请输入您的电话"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_dddddd"
            android:background="@null"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_42"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/white"
        android:text="提交报名"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginEnd="@dimen/padding_14"
        android:background="@drawable/bg_solid_dddddd_21"/>

    <TextView
        android:layout_marginStart="@dimen/padding_14"
        android:layout_marginEnd="@dimen/padding_14"
        android:textSize="@dimen/text_size_11"
        android:layout_marginBottom="@dimen/padding_24"
        android:layout_marginTop="@dimen/padding_14"
        android:text="注:注：我们的金牌导师，将会5分钟内联系，感谢您的耐心等待"
        android:textColor="@color/color_aaaaaa_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>