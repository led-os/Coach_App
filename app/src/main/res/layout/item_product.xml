<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_9"
    android:layout_marginStart="@dimen/padding_4"
    android:layout_marginEnd="@dimen/padding_4">

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="@dimen/padding_115"
        android:layout_height="@dimen/padding_82"
        android:src="@drawable/ic_buffer1"/>
    <TextView
        android:id="@+id/tv_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_7"
        android:paddingEnd="@dimen/padding_7"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/img_one"
        android:layout_alignBottom="@+id/img_one"
        android:background="@drawable/bg_solide_61000000_8"
        android:layout_marginEnd="@dimen/padding_6"
        android:layout_marginBottom="@dimen/padding_7"
        android:textSize="@dimen/text_size_10"
        android:gravity="center"
        android:visibility="gone"
        android:text="08:15"/>

    <TextView
        android:id="@+id/tv_price"
        android:textColor="@color/color_da2b2b"
        android:text="¥ 3,489.00"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/padding_8"
        android:textSize="@dimen/text_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13"
        android:layout_marginTop="@dimen/padding_2"
        android:layout_toEndOf="@+id/img_one"
        android:layout_alignTop="@+id/img_one"
        android:layout_marginStart="@dimen/padding_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="中年人如何保持精瘦"/>


    <TextView
        android:id="@+id/tv_location_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产地："
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_alignStart="@+id/tv_title"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding_7"
        android:layout_alignBottom="@+id/img_one" />



    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:layout_toEndOf="@+id/tv_location_des"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_alignTop="@+id/tv_location_des"
        android:layout_alignBottom="@+id/tv_location_des"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="美国"/>
</RelativeLayout>