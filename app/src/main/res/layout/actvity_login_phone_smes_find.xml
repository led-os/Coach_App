<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="输入短信验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/font_23" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已向您的手机  发送验证码"
        android:textColor="@color/login_title"
        android:textSize="@dimen/font_14" />

    <com.jsjlzj.wayne.widgets.text.VerifyCodeView
        android:id="@+id/edPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20" />

    <com.jsjlzj.wayne.widgets.text.CountDownTextView
        android:id="@+id/btnGetSmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:text="获取验证码"
        android:textColor="@color/login_btn_smes"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/sl_btn_login"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>