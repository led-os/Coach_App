<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.store.find.PictureVideoFragment">


    <LinearLayout
        android:id="@+id/ll_business"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_23"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_business_type"
            android:text="商家图片"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_232323"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_bus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color_999999"
            tools:text="12张"/>
        <ImageView
            android:id="@+id/img_bus_type"
            android:layout_width="@dimen/padding_23"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_14"
            android:src="@drawable/icon_home_right"/>


    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_business"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginStart="@dimen/padding_9"
        android:layout_marginEnd="@dimen/padding_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/ll_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_23"
        android:layout_marginTop="@dimen/padding_24"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_net_type"
            android:text="网友图片"
            android:layout_marginStart="@dimen/padding_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_232323"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_net_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color_999999"
            tools:text="12张"/>
        <ImageView
            android:id="@+id/img_net_type"
            android:layout_width="@dimen/padding_23"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_14"
            android:src="@drawable/icon_home_right"/>


    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_net"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginStart="@dimen/padding_9"
        android:layout_marginEnd="@dimen/padding_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>