<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.store.home.mine.AfterSaleApplyActivity">

    <include layout="@layout/title_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_marginEnd="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_pic"
                    android:layout_width="@dimen/padding_54"
                    android:layout_height="@dimen/padding_54"
                    android:layout_marginBottom="@dimen/padding_14"
                    android:layout_marginStart="@dimen/padding_10"
                    android:src="@drawable/ic_default_image"
                    android:layout_marginTop="@dimen/padding_14"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_toEndOf="@+id/img_pic"
                    android:text="亿健2019新款跑步机 家用静音减震"
                    android:layout_marginStart="@dimen/padding_12"
                    android:layout_marginTop="@dimen/padding_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_222222"/>

                <TextView
                    android:id="@+id/tv_attribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginTop="@dimen/padding_10"
                    android:text="银灰色"
                    android:layout_toEndOf="@+id/img_pic"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignStart="@+id/tv_name"
                    android:textColor="@color/color_666666"/>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_666666"
                    android:layout_alignBottom="@+id/img_pic"
                    android:layout_alignParentEnd="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_46"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/padding_19">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="货物状态:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_999999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginStart="@dimen/padding_10"
                    android:text="已确认收货"/>

<!--                <Space-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"/>-->
<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="@dimen/padding_14"-->
<!--                    android:src="@drawable/icon_shop_right"/>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0.5"
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginEnd="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <LinearLayout
                android:id="@+id/ll_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_46"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="退款原因:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_999999"/>
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:layout_marginStart="@dimen/padding_10"
                    tools:text="其他"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:src="@drawable/icon_shop_right"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0.5"
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginEnd="@dimen/padding_14"
                android:background="@color/color_dddddd"/>
            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_46"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginStart="@dimen/padding_14"
                    android:text="退款金额："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_999999"/>


                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_14"
                    android:text="¥27.00"
                    android:textColor="@color/color_f1404b"
                    android:textSize="@dimen/text_size_15"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0.5"
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginEnd="@dimen/padding_14"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_marginStart="@dimen/padding_14"
                android:layout_marginEnd="@dimen/padding_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款说明（选填）"
                    android:layout_marginTop="@dimen/padding_17"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_999999"/>

                <EditText
                    android:id="@+id/et_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desc"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_dddddd"
                    android:paddingBottom="@dimen/padding_16"
                    android:layout_marginTop="@dimen/padding_12"
                    android:hint="有任何问题可以告知我们~"
                    android:background="@null"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传凭证"
                android:layout_marginTop="@dimen/padding_21"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/color_999999"
                android:layout_marginStart="@dimen/padding_14"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_authentication_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_17"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginEnd="@dimen/padding_10" />


            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_42"
                android:text="提交"
                android:layout_marginBottom="@dimen/padding_25"
                android:layout_marginTop="@dimen/padding_25"
                android:layout_marginStart="@dimen/padding_46"
                android:layout_marginEnd="@dimen/padding_46"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_solid_ff7c84_22"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>