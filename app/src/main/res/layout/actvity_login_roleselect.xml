<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defult_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择你的身份"
            android:textColor="@color/black"
            android:textSize="@dimen/font_23" />
    </LinearLayout>

    <ImageView
        android:layout_width="136dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_role_trainer1" />

    <TextView
        android:id="@+id/btnTrainer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="50dp"
        android:background="@drawable/dr_btn_login_y"
        android:gravity="center"
        android:text="我是达人"
        android:textColor="@color/white"
        android:textSize="17sp" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_role_store" />

    <TextView
        android:id="@+id/btnStore"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="50dp"
        android:background="@drawable/dr_btn_login_y"
        android:gravity="center"
        android:text="我是俱乐部"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>