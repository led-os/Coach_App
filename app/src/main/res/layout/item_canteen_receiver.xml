<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/padding_10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_shopping"
        android:layout_toEndOf="@+id/ll_select"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/text_size_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_width="@dimen/padding_77"
        android:layout_height="@dimen/padding_77"
        android:src="@drawable/ic_homepage_ydqc"/>


    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="@dimen/padding_28"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_shopping"
        android:layout_alignBottom="@+id/img_shopping"
        android:paddingStart="@dimen/padding_12"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="@dimen/padding_15"
            android:layout_height="@dimen/padding_15"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:src="@drawable/cbx_select"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_name"
        android:text="烤风爪"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/img_shopping"
        android:layout_marginStart="@dimen/padding_12"
        android:paddingEnd="@dimen/padding_12"
        android:layout_alignTop="@id/img_shopping"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_222222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_attribute"
        tools:text="已选银灰色"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_below="@id/tv_name"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_toEndOf="@+id/img_shopping"
        android:layout_alignBottom="@+id/img_shopping"
        android:layout_alignStart="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:text="¥ 2,799.00"
        android:textColor="@color/color_f1404b"
        />


    <ImageView
        android:id="@+id/img_add"
        android:src="@drawable/ic_add_normal"
        android:layout_alignBottom="@+id/img_shopping"
        android:layout_marginEnd="@dimen/padding_12"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:layout_marginEnd="@dimen/padding_14"
        android:layout_marginStart="@dimen/padding_14"
        android:textColor="@color/color_222222"
        android:layout_marginBottom="@dimen/padding_2"
        android:text="3"
        android:layout_alignBottom="@+id/img_shopping"
        android:layout_toStartOf="@+id/img_add"/>

    <ImageView
        android:id="@+id/img_delete"
        android:src="@drawable/ic_jian_normal"
        android:layout_alignBottom="@+id/img_shopping"
        android:layout_toStartOf="@id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_number"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color_666666"
        android:text="x1"
        android:visibility="gone"
        android:layout_alignBottom="@+id/img_shopping"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/padding_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@+id/img_shopping"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_alignStart="@+id/img_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bq_xsms"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_999999"
            android:text="距离结束时间"
            android:layout_marginStart="@dimen/padding_8"/>

        <TextView
            android:id="@+id/tv_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_7"
            android:background="@drawable/bg_solid_time"
            android:gravity="center"
            android:text="23"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_h_mao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_17"
            android:layout_marginStart="@dimen/padding_5"
            android:layout_marginEnd="@dimen/padding_5"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/color_FF5763"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_solid_time"
            android:gravity="center"
            android:text="58"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_m_mao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_17"
            android:layout_marginStart="@dimen/padding_5"
            android:layout_marginEnd="@dimen/padding_5"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="@color/color_FF5763"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_solid_time"
            android:gravity="center"
            android:text="59"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</RelativeLayout>