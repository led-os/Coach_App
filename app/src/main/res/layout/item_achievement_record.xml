<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_71"
    android:id="@+id/rel_achievement"
    android:layout_marginTop="@dimen/padding_7"
    android:layout_marginBottom="@dimen/padding_7"
    android:layout_marginStart="@dimen/padding_14"
    android:layout_marginEnd="@dimen/padding_14"
    android:background="@drawable/bg_solid_7776cf_5">


    <TextView
        android:id="@+id/tv_fraction"
        android:text="81"
        android:textSize="@dimen/text_size_25"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/padding_19"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:layout_alignBottom="@+id/tv_fraction"
        android:layout_toEndOf="@+id/tv_fraction"
        android:textSize="@dimen/text_size_13"
        android:layout_marginBottom="@dimen/padding_5"
        android:textColor="@color/white"/>


    <View
        android:id="@+id/view"
        android:layout_width="@dimen/padding_0_33"
        android:layout_height="@dimen/padding_41"
        android:layout_toEndOf="@+id/tv_fen"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginEnd="@dimen/padding_14"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_number"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_toEndOf="@+id/view"
        android:text="第五次"/>

    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/white_70"
        android:textSize="@dimen/text_size_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_below="@+id/tv_number"
        android:layout_alignStart="@+id/tv_number"
        android:text="2019年11月17日 14:27"/>

</RelativeLayout>