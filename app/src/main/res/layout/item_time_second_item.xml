<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/padding_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="@dimen/padding_94"
        android:layout_height="@dimen/padding_94"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:src="@drawable/ic_default_image"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_toEndOf="@+id/img_shop"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingEnd="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/color_222222"
        android:text="支链氨基酸fasdffasdf"
        />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_999999"
        android:text="前2000件立减40"
        android:layout_alignStart="@+id/tv_title"
        android:layout_marginTop="@dimen/padding_2"
        android:layout_below="@+id/tv_title"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bq_plus"
        android:layout_below="@+id/tv_des"
        android:layout_marginTop="@dimen/padding_7"
        android:visibility="gone"
        android:layout_alignStart="@+id/tv_title"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥68.9"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/color_f1404b"
        android:layout_alignBottom="@+id/img_shop"
        android:layout_marginBottom="@dimen/padding_2"
        android:layout_alignStart="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_old_money"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/color_999999"
        android:layout_toEndOf="@+id/tv_money"
        android:layout_alignBottom="@+id/tv_money"
        android:layout_marginBottom="@dimen/padding_2"
        android:layout_marginStart="@dimen/padding_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥72"/>

    <TextView
        android:id="@+id/tv_rob"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/img_shop"
        android:layout_marginEnd="@dimen/padding_10"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/white"
        android:text="立即抢"
        android:gravity="center"
        android:background="@drawable/bg_rob_shop"
        android:layout_width="@dimen/padding_77"
        android:layout_height="@dimen/padding_27"/>

</RelativeLayout>