<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_7"
    android:layout_marginEnd="@dimen/padding_7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_shop_type"
        android:layout_width="@dimen/padding_72"
        android:layout_height="@dimen/padding_72"
        android:src="@drawable/ic_homepage_ydqc"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_6"
        android:layout_width="@dimen/padding_72"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_money"
            android:text="¥45"
            android:textColor="@color/color_f1404b"
            android:layout_marginTop="@dimen/padding_4"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_12"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_old_money"
            android:text="¥72"
            android:layout_marginStart="@dimen/padding_4"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding_4"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>